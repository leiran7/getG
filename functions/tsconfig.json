    "module": "commonjs",
    "noImplicitReturns": true,
    "lib": ["ES2021.String", "dom", "dom.iterable", "esnext"],
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": false,
    "target": "es2017",
